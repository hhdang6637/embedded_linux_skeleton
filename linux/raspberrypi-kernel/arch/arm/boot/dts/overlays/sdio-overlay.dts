/dts-v1/;
/plugin/;

/* Enable SDIO from MMC interface via GPIOs 22-27. Includes sdhost overlay. */

/{
	compatible = "brcm,bcm2708";

	fragment@0 {
		target = <&mmc>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@1 {
		target = <&soc>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <1>;

			sdio_ovl: sdio@7e300000 {
				compatible = "brcm,bcm2835-mmc",
					     "brcm,bcm2835-sdhci";
				reg = <0x7e300000 0x100>;
				interrupts = <2 30>;
				clocks = <&clocks 28/*BCM2835_CLOCK_EMMC*/>;
				dmas = <&dma 11>;
				dma-names = "rx-tx";
				brcm,overclock-50 = <0>;
				status = "okay";
				pinctrl-names = "default";
				pinctrl-0 = <&sdio_ovl_pins>;
				non-removable;
				bus-width = <1>;
			};
		};
	};

	fragment@2 {
		target = <&gpio>;
		__overlay__ {
			sdio_ovl_pins: sdio_ovl_pins {
				brcm,pins = <22 23 24 25 26 27>;
				brcm,function = <7>; /* ALT3 = SD1 */
				brcm,pull = <0 2 2 2 2 2>;
			};
		};
	};

	fragment@3 {
		target-path = "/aliases";
		__overlay__ {
			mmc1 = "/soc/sdio@7e300000";
		};
	};

	__overrides__ {
		poll_once = <&sdio_ovl>,"non-removable?";
		bus_width = <&sdio_ovl>,"bus-width:0";
		sdio_overclock = <&sdio_ovl>,"brcm,overclock-50:0";
	};
};
